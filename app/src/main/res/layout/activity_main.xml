<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    tools:context="com.example.android.courtcounter.MainActivity">

<LinearLayout
    android:layout_width="wrap_content"
    android:layout_weight=".5"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Team A"
        android:id="@+id/team_tag" />

    <TextView
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="0"
        android:id="@+id/score_tag" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+3 points"
        android:id="@+id/set3_btn"
       android:onClick="scoreSet3"
        android:layout_gravity="center_horizontal" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+2 points"
        android:id="@+id/set2_btn"
        android:onClick="scoreSet3"
        android:layout_gravity="center_horizontal" />

    <Button

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="+1 points"
        android:id="@+id/set1_btn"
        android:onClick="scoreSet3"
        android:layout_gravity="center_horizontal" />
</LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Team B"
            android:id="@+id/team_tagb" />

        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="0"
            android:id="@+id/score_tagb" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+3 points"
            android:id="@+id/set3_btnb"
            android:onClick="scoreSet3"
            android:layout_gravity="center_horizontal" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+2 points"
            android:id="@+id/set2_btnb"
            android:onClick="scoreSet3"
            android:layout_gravity="center_horizontal" />

        <Button

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="+1 points"
            android:id="@+id/set1_btnb"
            android:onClick="scoreSet3"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</LinearLayout>
